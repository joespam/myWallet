<h1>Login to myWallet</h1>
<hr>

<%= form_tag, url: {action: :create, controller: :sessions} do %>
	<p>
		<%=label_tag "Enter Email:" %>
		<%=text_field_tag :email, "", { class: 'loginField' } %>
	</p><p>
		<%=label_tag "Password:" %>
		<%=text_field_tag :password, "", { class: 'loginField' } %>
	</p><p id="linkGroup">
		<%=submit_tag "Login" %>
	</p>
<% end %>
<hr>

<p id="linkGroup">
	<%=  link_to "Signup!", new_user_path %>
</p>
